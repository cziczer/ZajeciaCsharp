                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Content" Value="Off" />
                        <Setter Property="FontSize" Value="60" />
                    </Trigger>
                </Style.Triggers>
            </Style>
